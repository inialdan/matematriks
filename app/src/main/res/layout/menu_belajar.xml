<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/menu_belajar_header"
                layout="@layout/menu_belajar_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_belajar_header_title"
                layout="@layout/menu_belajar_header_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_belajar_header_progress"
                layout="@layout/menu_belajar_header_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_belajar_matriks"
                layout="@layout/menu_belajar_matriks"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_belajar_ordo_matriks"
                layout="@layout/menu_belajar_ordo_matriks"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_belajar_jenis_matriks"
                layout="@layout/menu_belajar_jenis_matriks"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_belajar_transpos_matriks"
                layout="@layout/menu_belajar_transpos_matriks"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_belajar_kesamaan_matriks"
                layout="@layout/menu_belajar_kesamaan_matriks"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_belajar_pertambahan_pengurangan_matriks"
                layout="@layout/menu_belajar_pertambahan_pengurangan_matriks"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_belajar_perkalian_matriks"
                layout="@layout/menu_belajar_perkalian_matriks"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_belajar_determinan_matriks"
                layout="@layout/menu_belajar_determinan_matriks"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_belajar_minor_matriks"
                layout="@layout/menu_belajar_minor_matriks"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_belajar_footer"
                layout="@layout/menu_belajar_footer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>