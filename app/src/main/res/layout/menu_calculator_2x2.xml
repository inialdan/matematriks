<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_black_light">

        <LinearLayout
            android:id="@+id/Layout_Calculator_Input"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context=".MainActivity"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/ordo_2_x_2"
                android:layout_gravity="center_horizontal"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center" />

            <LinearLayout
                android:id="@+id/B1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/B11"
                    android:layout_width="0sp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:ems="10"
                    android:hint="@string/b11"
                    android:background="@drawable/bg_form_request"
                    android:textColorHint="@color/color_grey_dark"
                    android:inputType="number"
                    android:maxLength="2"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp" />

                <EditText
                    android:id="@+id/B12"
                    android:layout_width="0sp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_form_request"
                    android:ems="10"
                    android:hint="@string/b12"
                    android:inputType="number"
                    android:maxLength="2"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:textAlignment="center"
                    android:textColorHint="@color/color_grey_dark" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/B2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/B21"
                    android:layout_width="0sp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:ems="10"
                    android:hint="@string/b11"
                    android:background="@drawable/bg_form_request"
                    android:textColorHint="@color/color_grey_dark"
                    android:inputType="number"
                    android:maxLength="2"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp" />
                <EditText
                    android:id="@+id/B22"
                    android:layout_width="0sp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:ems="10"
                    android:hint="@string/b12"
                    android:background="@drawable/bg_form_request"
                    android:textColorHint="@color/color_grey_dark"
                    android:inputType="number"
                    android:maxLength="2"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp" />
            </LinearLayout>

            <Button
                android:id="@+id/Proses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_form_button_submit"
                android:text="Proses"
                android:textColor="@color/white"/>

            <include
                android:id="@+id/menu_matriks"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                layout="@layout/menu_calculator_result_matriks" />

            <include
                android:id="@+id/menu_minor"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                layout="@layout/menu_calculator_result_minor" />

            <include
                android:id="@+id/menu_kalkulator"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                layout="@layout/menu_calculator_result_determinan" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>

