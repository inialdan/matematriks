<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10sp"
            android:background="?android:attr/selectableItemBackground">
            <LinearLayout
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="15dp">
                <TextView
                    android:id="@+id/pict_poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="[  ]"
                    android:textSize="70sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/lblMinorMatriks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Minor"
                android:textColor="#040404"
                android:textSize="21sp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <TextView
                android:id="@+id/tM11"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/lblMinorMatriks"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="M11"
                android:textColor="#343434"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tM12"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/tM11"
                android:layout_alignBottom="@+id/tM11"
                android:layout_toEndOf="@+id/tM11"
                android:layout_marginLeft="10dp"
                android:text="M12"
                android:textColor="#343434"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tM21"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_below="@id/tM11"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="M21"
                android:textColor="#343434"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tM22"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignBaseline="@+id/tM21"
                android:layout_alignBottom="@+id/tM21"
                android:layout_toEndOf="@+id/tM21"
                android:layout_marginLeft="10dp"
                android:text="M22"
                android:textColor="#343434"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/Description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/Baskom"
                android:layout_below="@+id/thumbnail"
                android:layout_marginTop="20dp"
                android:text="@string/description_minor_1"
                android:textColor="#343434"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/Result_Matriks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/lblMinorMatriks"
                android:gravity="right"
                android:text="Hasil Matriksnya"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/Baskom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/tM22"
                android:gravity="right"
                android:text="Baris Kolom"
                android:textColor="@color/color_grey"
                android:textSize="12sp"
                android:visibility="invisible"
                android:layout_marginTop="-5dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>