<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/menu_latihan_header_progress"
                layout="@layout/menu_latihan_header_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_latihan_quiz"
                layout="@layout/menu_latihan_quiz"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_latihan_determinan"
                layout="@layout/menu_latihan_determinan"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:id="@+id/menu_latihan_footer"
                layout="@layout/menu_latihan_footer"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>