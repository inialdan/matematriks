<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingBottom="5dip"
            android:background="?android:attr/selectableItemBackground">
            <TextView
                android:id="@+id/lblBelajarMatriks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Keterangan"
                android:textColor="#040404"
                android:textSize="15dip"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:typeface="sans" />

            <ImageView
                android:id="@+id/icon_none"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/text_icon_none"
                android:src="@drawable/icon_checked_none"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/text_icon_none"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblBelajarMatriks"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textAlignment="center"
                android:layout_toRightOf="@+id/icon_none"
                android:text="@string/icon_text_latihan_none"
                android:layout_marginLeft="5dp"
                android:textColor="#343434"
                android:textSize="10dip" />

            <ImageView
                android:id="@+id/icon_finish"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="3dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/Description"
                android:src="@drawable/icon_checked_finish"
                android:layout_below="@+id/icon_none"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/text_icon_finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/icon_finish"
                android:layout_toEndOf="@+id/icon_finish"
                android:layout_marginLeft="5dp"
                android:text="@string/icon_text_latihan_checked"
                android:textColor="#343434"
                android:textSize="10dip"
                android:layout_toRightOf="@+id/icon_finish" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>