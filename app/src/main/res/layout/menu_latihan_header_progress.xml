<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible"
    android:padding="10dp">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:padding="10dp">


            <ImageView
                android:id="@+id/Piala"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/icon_pialaoff" />

            <ImageView
                android:id="@+id/StarLeft"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:layout_alignTop="@+id/Piala"
                android:layout_toLeftOf="@+id/Piala"
                android:layout_toStartOf="@+id/Piala"
                android:src="@drawable/icon_leftstaroff" />

            <ImageView
                android:id="@+id/StarRight"
                android:layout_width="wrap_content"
                android:layout_height="76dp"
                android:layout_alignTop="@+id/Piala"
                android:layout_toEndOf="@+id/Piala"
                android:layout_toRightOf="@+id/Piala"
                android:src="@drawable/icon_rightstaroff" />

            <TextView
                android:id="@+id/textViewLastScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_below="@id/Piala"
                android:textStyle="bold"
                android:text="Kamu belum melakukan test apapun, ayo silahkan coba!" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>