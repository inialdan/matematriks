<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="visible"
    android:padding="10dp">
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:background="?android:attr/selectableItemBackground">
            <LinearLayout
                android:id="@+id/thumbnail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dip">
                <ImageView
                    android:id="@+id/pict_poster"
                    android:layout_width="69dp"
                    android:layout_height="76dp"
                    android:src="@drawable/icon_quiz"/>
            </LinearLayout>
            <TextView
                android:id="@+id/lblQuizPilihanGanda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/thumbnail"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Quiz Pilihan Ganda Matriks"
                android:textColor="#040404"
                android:textSize="15dip"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:typeface="sans" />
            <TextView
                android:id="@+id/Matriks"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lblQuizPilihanGanda"
                android:layout_marginTop="1dip"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Matriks Ordo 2 x2"
                android:textColor="#343434"
                android:textSize="11dip" />
            <TextView
                android:id="@+id/Determinan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Matriks"
                android:layout_marginTop="1dip"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Determinan"
                android:textColor="#343434"
                android:textSize="11dip" />
            <TextView
                android:id="@+id/Minor"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Determinan"
                android:layout_marginTop="1dip"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="Minor"
                android:textColor="#343434"
                android:textSize="11dip" />


            <TextView
                android:id="@+id/Description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Minor"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/thumbnail"
                android:text="- Quiz Pilihan Ganda Matriks adalah aplikasi untuk Quiz Pilihan Ganda Matriks, Invers, Adjoin."
                android:textColor="#343434"
                android:textSize="10dip" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/lblQuizPilihanGanda"
                android:src="@drawable/icon_checked_none"
                android:visibility="visible"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>